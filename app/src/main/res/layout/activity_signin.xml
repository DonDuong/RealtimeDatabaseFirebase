<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity">
    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="614dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/signin_et_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập email"
            android:inputType="textEmailAddress"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/signin_et_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập Password"
            android:inputType="textPassword"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/signin_tv_Error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E41616"
            android:textSize="24sp" />

        <Button
            android:id="@+id/signin_btn_Signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:textSize="34sp" />

        <Button
            android:id="@+id/signin_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textSize="34sp" />

        <Button
            android:id="@+id/signin_btn_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên Mật Khẩu"
            android:textSize="34sp" />

        <Button
            android:id="@+id/signin_btn_Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="34sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>